<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MarvelRivalManager.UI.Pages.ModView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MarvelRivalManager.UI.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:component="using:MarvelRivalManager.UI.Components"
    mc:Ignorable="d"
>
    <ScrollView>
        <Grid Margin="10,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <StackPanel Orientation="Horizontal" Spacing="20">
                    <Button x:Name="GoBackButton" 
                        Content="Go Back" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Top"
                        Click="BackButton_Click" 
                    />
                    <Button x:Name="SaveChanges" 
                        Content="Save" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Top"
                        Click="SaveChanges_Click" 
                    />
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1" Margin="20,50,20,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Ellipse x:Name="ConnectedElement"
                        Grid.Column="0" Grid.RowSpan="3"
                        Width ="100"
                        Height="100"
                        Margin="6"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Fill="{ThemeResource ControlStrongFillColorDefaultBrush}"
                        Visibility="{x:Bind Mod.NoHasLogo, Mode=OneWay}"
                    />
                    <Image x:Name="LogoPlaceholder"
                        Grid.Column="0" Grid.RowSpan="3"
                        Width ="100"
                        Height="100"
                        Margin="6"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Stretch="Uniform"
                        Source="{x:Bind Mod.NullableLogo, Mode=OneWay}"
                        Visibility="{x:Bind Mod.HasLogo, Mode=OneWay}"
                    />
                    <Button Name="ChangeLogoButton" HorizontalAlignment="Center" VerticalAlignment="Center" Click="ChangeLogoClick">
                        <FontIcon Glyph="&#xEE71;" FontSize="10"/>
                    </Button>
                </StackPanel>
                
                <StackPanel x:Name="CoordinatedElement" Grid.Column="1" VerticalAlignment="Top" Margin="20,0">
                    <TextBox 
                        Text="{x:Bind Mod.Values.Metadata.Name, Mode=TwoWay}"
                        FontSize="20"
                        Margin="0,0,0,10"
                    />
                    <component:ReadOnlyText Label="Filename:" Value="{x:Bind Mod.Values.File.Filename, Mode=OneWay}" />
                    <component:ReadOnlyText Label="Status:" Value="{x:Bind Mod.Status, Mode=OneWay}" />
                </StackPanel>
            </Grid>

            <Grid Grid.Row="2" Margin="0,30">
                <StackPanel>
                    <TextBlock Text="Metadata" Style="{ThemeResource SubtitleTextBlockStyle}" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" Spacing="20" VerticalAlignment="Center" Margin="0,0,0,10">
                        <TextBlock Text="Order:" FontSize="14" Margin="0,0,0,10" Width="100"/>
                        <NumberBox
                            Width="300"
                            Value="{x:Bind Mod.Values.Metadata.Order, Mode=TwoWay}"
                            Minimum="0"
                            SpinButtonPlacementMode="Inline"
                            SmallChange="1"
                            LargeChange="5" 
                        />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="20" VerticalAlignment="Center" Margin="0,0,0,10">
                        <TextBlock Text="Tags:" FontSize="14" Margin="0,0,0,10" Width="100"/>
                        <TextBox 
                            Text="{x:Bind Mod.InputTags, Mode=TwoWay}"
                            FontSize="14"
                            Margin="0,0,0,10"
                            Width="300"
                        />
                    </StackPanel>
                    <component:ReadOnlyText Label="System Tags:" Value="{x:Bind Mod.SystemTags, Mode=OneWay}" />
                </StackPanel>
            </Grid>

            <Grid Grid.Row="3" Margin="0,30">
                <StackPanel>
                    <TextBlock Text="File information" Style="{ThemeResource SubtitleTextBlockStyle}" Padding="0,0,0,20"/>
                    <component:ReadOnlyText Label="Filepath:" Value="{x:Bind Mod.Values.File.Filepath, Mode=OneWay}" />
                    <component:ReadOnlyText Label="Filename:" Value="{x:Bind Mod.Values.File.Filename, Mode=OneWay}" />
                    <component:ReadOnlyText Label="Location:" Value="{x:Bind Mod.Values.File.Location, Mode=OneWay}" />
                    <component:ReadOnlyText Label="Extension:" Value="{x:Bind Mod.Values.File.Extension, Mode=OneWay}" />

                    <TextBlock Text="Profile File information" Style="{ThemeResource SubtitleTextBlockStyle}" Padding="0,20,0,20"/>
                    <component:ReadOnlyText Label="Filepath:" Value="{x:Bind Mod.Values.File.ProfileFilepath, Mode=OneWay}" />
                    <component:ReadOnlyText Label="Filename:" Value="{x:Bind Mod.Values.File.ProfileFilename, Mode=OneWay}" />
                    <component:ReadOnlyText Label="Location:" Value="{x:Bind Mod.Values.File.ProfileLocation, Mode=OneWay}" />
                    <component:ReadOnlyText Label="Extension:" Value="{x:Bind Mod.Values.File.ProfileExtension, Mode=OneWay}" />

                    <TextBlock Text="Extraction information" Style="{ThemeResource SubtitleTextBlockStyle}" Padding="0,20,0,20"/>
                    <component:ReadOnlyText Label="Path:" Value="{x:Bind Mod.Values.File.Extraction, Mode=OneWay}" />
                    <component:ReadOnlyText Label="Content:" Value="{x:Bind Mod.Values.File.ExtractionContent, Mode=OneWay}" />

                    <StackPanel Padding="0,50,30,0">
                        <TextBlock Text="Mod files:" FontSize="14" Margin="0,0,0,10" Width="100"/>
                        <RichEditBox x:FieldModifier="private" x:Name="FilePaths"
                            AcceptsReturn="True"
                            AutomationProperties.Name="Output"
                            FontFamily="Consolas"
                            FontSize="13"
                            IsSpellCheckEnabled="False"
                            ScrollViewer.HorizontalScrollBarVisibility="Auto"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            MaxHeight="200"
                            IsReadOnly="True"
                        />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollView>
</Page>
