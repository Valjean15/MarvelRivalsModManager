<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MarvelRivalManager.UI.Pages.Console"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MarvelRivalManager.UI.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    
    Loaded="Page_Loaded"
>
    <StackPanel>
        <CommandBar IsOpen="False" DefaultLabelPosition="Right" IsSticky="True" HorizontalAlignment="Left">
            <AppBarButton Icon="Orientation" Label="Unpack" Click="UnpackButton_Click" />
            <AppBarButton Icon="SaveLocal" Label="Patch" Click="PatchButton_Click" />
            <AppBarButton Icon="Refresh" Label="Unpatch" Click="UnpatchButton_Click" />
            <AppBarSeparator />

            <AppBarButton Icon="Library" Label="Download" Click="DownloadButton_Click" />
            <AppBarButton Icon="Delete" Label="Delete" Click="DeleteDownloadButton_Click" />
            <AppBarSeparator />
            
            <AppBarButton Icon="Clear" Label="Clear" Click="ClearButton_Click" />

        </CommandBar>
        <ProgressBar x:Name="IsInProgress" IsIndeterminate="False" Value="100" />
        <RichEditBox x:FieldModifier="private" x:Name="Ouput"
            AcceptsReturn="True"
            AutomationProperties.Name="Output"
            FontFamily="Consolas"
            FontSize="13"
            IsSpellCheckEnabled="False"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            MinHeight="600"
            MaxHeight="800"
            IsReadOnly="True"
        />
    </StackPanel>
</Page>
