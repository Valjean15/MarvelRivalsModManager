<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MarvelRivalManager.UI.Pages.Console"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MarvelRivalManager.UI.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    
    Loaded="Page_Loaded"
>
    <StackPanel>
        <CommandBar IsOpen="False" DefaultLabelPosition="Right" IsSticky="True" HorizontalAlignment="Left">
            <AppBarButton Icon="Orientation" Label="Unpack" Click="UnpackButton_Click" />
            <AppBarButton Icon="SaveLocal" Label="Patch" Click="PatchButton_Click" />
            <AppBarSeparator />

            <AppBarButton Icon="Refresh" Label="Restore">
                <AppBarButton.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Text="All" Click="RestoreButton_Click" Tag="all"/>
                        <MenuFlyoutItem Text="Characters" Click="RestoreButton_Click" Tag="characters"/>
                        <MenuFlyoutItem Text="UI" Click="RestoreButton_Click" Tag="ui"/>
                        <MenuFlyoutItem Text="Movies" Click="RestoreButton_Click" Tag="movies"/>
                    </MenuFlyout>
                </AppBarButton.Flyout>
            </AppBarButton>
            <AppBarButton Icon="Accept" Label="Enable">
                <AppBarButton.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Text="All" Click="EnableButton_Click" Tag="all"/>
                        <MenuFlyoutItem Text="Characters" Click="EnableButton_Click" Tag="characters"/>
                        <MenuFlyoutItem Text="UI" Click="EnableButton_Click" Tag="ui"/>
                        <MenuFlyoutItem Text="Movies" Click="EnableButton_Click" Tag="movies"/>
                    </MenuFlyout>
                </AppBarButton.Flyout>
            </AppBarButton>
            <AppBarButton Icon="Redo" Label="Disable">
                <AppBarButton.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Text="All" Click="DisableButton_Click" Tag="all"/>
                        <MenuFlyoutItem Text="Characters" Click="DisableButton_Click" Tag="characters"/>
                        <MenuFlyoutItem Text="UI" Click="DisableButton_Click" Tag="ui"/>
                        <MenuFlyoutItem Text="Movies" Click="DisableButton_Click" Tag="movies"/>
                    </MenuFlyout>
                </AppBarButton.Flyout>
            </AppBarButton>
            <AppBarSeparator />

            <AppBarButton Icon="Clear" Label="Clear" Click="ClearButton_Click" />

        </CommandBar>
        <ProgressBar x:Name="IsInProgress" IsIndeterminate="False" Value="100" />
        <RichEditBox x:FieldModifier="private" x:Name="Ouput"
            AcceptsReturn="True"
            AutomationProperties.Name="Output"
            FontFamily="Consolas"
            FontSize="13"
            IsSpellCheckEnabled="False"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            MinHeight="600"
            MaxHeight="800"
            IsReadOnly="True"
        />
    </StackPanel>
</Page>
